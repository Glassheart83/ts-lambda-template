{
    "compilerOptions": {
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "es2017",
        "lib": [
            "es2017",
            "es2019",
            "esnext"
        ],
        "types": [
            "node",
            "reflect-metadata"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "baseUrl": "src",
        "outDir": "dist"
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules/**/*",
        ".serverless/**/*",
        ".vscode/**/*",
        "dist",
        "yarn.lock"
    ]
}