{
    "name": "ts-lambda-template",
    "version": "1.0.0",
    "description": "Typescript + Lambda template project",
    "engines": {
        "node": "12"
    },
    "scripts": {
        "clean": "shx rm -rf ./dist",
        "lint": "eslint --fix 'src/**/*.ts'",
        "compile": "ttsc",
        "build": "yarn clean && yarn lint && yarn compile",
        "start": "yarn build && node --inspect $(which serverless) offline start --printOutput --stage",
        "test": "jest --runInBand"
    },
    "dependencies": {
        "aws-sdk": "2.590.0",
        "class-transformer": "^0.2.3",
        "class-validator": "^0.11.0",
        "reflect-metadata": "^0.1.13"
    },
    "devDependencies": {
        "@types/aws-lambda": "^8.10.39",
        "@types/jest": "^24.0.23",
        "@types/node": "^12.12.18",
        "@typescript-eslint/eslint-plugin": "^2.11.0",
        "@typescript-eslint/parser": "^2.11.0",
        "browserify": "^16.5.0",
        "eslint": "^6.7.2",
        "jest": "^24.9.0",
        "serverless": "^1.59.3",
        "serverless-dynamodb-local": "^0.2.38",
        "serverless-offline": "^5.12.1",
        "serverless-plugin-browserifier": "^2.1.0",
        "shx": "^0.3.2",
        "ts-jest": "^24.2.0",
        "ts-node": "^8.5.4",
        "ttypescript": "^1.5.8",
        "typescript": "^3.7.3",
        "typescript-transform-paths": "^1.1.13"
    },
    "author": "Samuele Farfarini",
    "license": "MIT"
}
